<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blacklotus.confer.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">
        <LinearLayout


            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">


            <TextView

                android:text="USER REGISTRATION "
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borrower "
                    android:textSize="20dp"
                    android:layout_marginRight="40dp"/>
                <Switch
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch1"/>
                <TextView
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lender"
                    android:textSize="20dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/name"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Name"/>

            <EditText

                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:hint="Enter Your Email"
                android:id="@+id/edittextemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText

                android:layout_marginTop="10dp"
                android:id="@+id/edittextpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter your Password"
                android:inputType="textPassword" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Enter Aadhar Number"
                    android:id="@+id/aadharValidate"
                    android:textSize="19dp"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#689F38"
                    android:id="@+id/status"
                    android:text="STATUS"/>


            </LinearLayout>

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Address"/>

            <EditText
                android:id="@+id/age"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Age"/>
            <EditText
                android:id="@+id/accountbalance"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your AccountBalance"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employment Type"
                    android:textSize="20dp"/>
                <Spinner
                    android:id="@+id/employmentTypeSpinner"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                </Spinner>

            </LinearLayout>


            <EditText
                android:id="@+id/familyCount"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of members in your family"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="20dp"/>
                <Spinner
                    android:id="@+id/genderSpinner"
                    android:layout_marginLeft="80dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                </Spinner>
            </LinearLayout>


            <EditText
                android:id="@+id/income"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Income"/>

            <EditText
                android:id="@+id/marritial_status"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Marritial Status"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose"
                    android:textSize="20dp"/>
                <Spinner
                    android:id="@+id/purposeSpinner"
                    android:layout_marginLeft="80dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                </Spinner>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose"
                    android:textSize="20dp"/>
                <Spinner
                    android:id="@+id/residence_typeSpinner"
                    android:layout_marginLeft="80dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                </Spinner>
            </LinearLayout>

            <Button

                android:layout_marginTop="10dp"
                android:text="REGISTER"
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:id="@+id/textview1"
                android:text="Already Registered ? No - Sign In"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>